
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var student = (Academy.Data.StudentCourseDetailView)ViewBag.Detail;
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User Profile
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">User profile</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="@student.Avatar" alt="User profile picture">

                        <h3 class="profile-username text-center">@student.Name</h3>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Email:</b> <a class="pull-right">@student.Email</a>
                            </li>
                            <li class="list-group-item">
                                <b>Địa chỉ:</b> <a class="pull-right">@student.Address</a>
                            </li>
                            <li class="list-group-item">
                                <b>Số điện thoại:</b> <a class="pull-right">@student.Phone</a>
                            </li>
                            <li class="list-group-item">
                                <b>Giới tính:</b> <a class="pull-right">@(student.Gender == 1 ? "Nam" :"Nữ")</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- About Me Box -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin khóa học</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <strong><i class="fa fa-book margin-r-5"></i>Tên khóa học:</strong>
                        <p class="text-muted">
                            @student.CourseName
                        </p>
                        <hr>
                        <strong><i class="fa fa-book margin-r-5"></i>Giảng viên:</strong>
                        <p class="text-muted">
                            @student.TeacherName
                        </p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Số buổi học</strong>
                        <p>@student.CountLesson</p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Số tiền</strong>
                        <p>@String.Format("{0:#,##0}", student.Price) đ</p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Ngày khai giảng:</strong>
                        <p>@String.Format("{0:dd/MM/yyyy}", student.StartDate)</p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Ngày kết thúc:</strong>
                        <p>@String.Format("{0:dd/MM/yyyy}", student.EndDate)</p>    <hr>
                        <div class="col-lg-4">
                            <a class="btn btn-danger" href="@Url.Action("Index", "Student", new { Area = "Admin" })">Quay lại</a>
                        </div>
                    </div>

                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-md-3"></div>
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
